body
	font-family 'proxima-nova', sans-serif
	font-style normal
	color #000
	background-color #FFF
	opacity 0
	transition visibility 0s .3s, opacity .3s linear

body.show
	opacity 1
	transition opacity .3s linear

sup
	font-size .70em

code
	background #ddd
	padding 10px 20px
	margin 10px 0
	display inline-block
	border-radius 5px

input,
textarea
	width 400px

textarea
	resize vertical
	height 10em

.content
	margin 0 auto
	position relative
	width 960px

	+mobile()
		width 100%

.right
	float right !important
	margin 30px
	margin-right 0

	+mobile()
		float none

.left
	float left
	margin 30px
	margin-left 0

	+mobile()
		float none

.bbd
	/*border bottom dotted*/
	border-bottom 1px dotted $dotted
	padding-bottom 5px
	margin-bottom 10px
	clear both

.cb
	clear both

.cn
	clear none !important

.oh
	overflow hidden
	+mobile()
		overflow visible

.clearfix
	clearfix()

.mtb50
	/*margin top bottom*/
	margin 50px 0

.bold
	font-weight bold


/* COLORS */
.blue
	color $blue

.orange
	color $orange
/* COLORS */

.main
	margin-left auto
	margin-right auto
	width 960px
	font-size 16px
	background-color #fff
	padding-bottom 30px
	clearfix()

	+mobile()
		width 100%

.h1
	margin-left -20px
	margin-right -20px
	margin-bottom 20px
	padding 20px
	font-size 28px
	font-weight bold
	text-align center

.h2
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.h3
	margin-bottom 10px
	padding-left 20px
	padding-right 20px
	font-size 18px
	font-weight bold

img
	max-width 100%

a
	text-decoration underline
	&:hover
		text-decoration none

.link
	background-color transparent
	display inline-block
	border none
	color $orange
	cursor pointer
	padding-left 5px
	text-decoration underline
	width auto
	&:hover
		text-decoration none

.link_js
	color $orange
	text-decoration none
	cursor pointer
	margin-bottom -5px
	border-bottom 1px dashed

	&:hover
		border-bottom none

b,
strong
	font-weight 700

i,
em
	font-style italic

.text_right
	text-align right
.text_left
	text-align left
