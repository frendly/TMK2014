.pagedownload
	position relative

	.downloadCenter
		position relative

		input
			width auto

		td:nth-child(1)
			width 75%

		td:nth-child(2)
			text-align left

		td:nth-child(3)
			width 15px

		tr.bold td
			padding-top 50px

		.format
			text-transform uppercase

	.downloadCenter__zip
		text-align right

		input
			background-color transparent
			display inline-block
			border none
			color $orange
			cursor pointer
			width auto
			padding-left 5px
			text-decoration underline

			&:hover
				text-decoration none

		i
			display inline-block
			sprite($download)
