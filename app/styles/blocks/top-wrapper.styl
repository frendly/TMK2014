#top-wrapper
	width 100%
	height 43px
	background-color #E5E5E5
	min-width 960px
	margin-bottom 20px

	ul
		padding 4px 0
		float right
		padding-top 5px

	li
		float left

	a,
	.menu__link_active
		font-size 12px
		color $default_block_text
		background-color transparent
		margin 4px 8px 2px
		float left
		margin-top 8px


	.home
		background url('../images/home.png') no-repeat 0 0
		width 17px
		height 15px
		text-indent -9999px
		margin-top 4px

	.sitemap
		background url('../images/sitemap.png') no-repeat 0 0
		width 19px
		height 13px
		text-indent -9999px
		margin-top 6px

	.recommend
		background url('../images/kontakt.png') no-repeat 0 0
		width 15px
		height 11px
		text-indent -9999px
		margin-top 8px

/*searchform*/
#top-wrapper .search
	float left
	padding-right 0
	margin 0
	margin-left 10px

.searchform #search_wrapper
	width 198px
	display block

.searchform #search_keywords
	border none
	float left
	font-size 11px
	background-color #D8D8D8
	height 24px
	line-height 13px
	padding 3px 2px 2px 10px
	width 171px
	background-image url('../images/search_bg.png')
	background-position 0 0
	background-repeat no-repeat

.searchform #search_submit
	position relative
	vertical-align middle
	cursor pointer
	width 26px
	height 24px
	float left
	background-image url('../images/search_icon.png')
	background-position 0 0
	background-repeat no-repeat
