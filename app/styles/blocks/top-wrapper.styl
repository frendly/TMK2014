#top-wrapper
	width 100%
	height 43px
	background-color #E5E5E5
	min-width 960px
	margin-bottom 20px

#top-wrapper ul
	padding 4px 0
	float right

#top-wrapper li
	float left
	padding 4px 8px 2px
	font-size 12px
	margin-top 5px

#top-wrapper a
	color $default_block_text

/*searchform*/

#top-wrapper .search
	margin-right 0
	padding-right 0
	margin-top 0
	margin-left 10px

.searchform #search_wrapper
	width 198px
	display block

.searchform #search_keywords
	border none
	float left
	font-size 11px
	background-color #D8D8D8
	height 24px
	line-height 13px
	padding 3px 2px 2px 10px
	width 171px
	background-image url('../images/search_bg.png')
	background-position 0 0
	background-repeat no-repeat

.searchform #search_submit
	position relative
	vertical-align middle
	cursor pointer
	width 26px
	height 24px
	float left
	background-image url('../images/search_icon.png')
	background-position 0 0
	background-repeat no-repeat
