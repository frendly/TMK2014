#top-wrapper
	width 100%
	height 43px
	background-color #E5E5E5
	min-width 960px
	margin-bottom 20px

	ul
		padding 4px 0
		float right
		padding-top 5px

	li
		float left

	a,
	.menu__link_active
		font-size 12px
		color $default_block_text
		background-color transparent
		margin 4px 8px 2px
		float left
		margin-top 8px


	.home
		text-indent -9999px
		margin-top 4px
		sprite($home)

	.sitemap
		text-indent -9999px
		margin-top 6px
		sprite($sitemap)

	.recommend
		text-indent -9999px
		margin-top 8px
		sprite($kontakt)

/*searchform*/
#top-wrapper .search
	float left
	padding-right 0
	margin 0
	margin-left 10px

.searchform #search_wrapper
	width 198px
	display block

.searchform #search_keywords
	border none
	float left
	font-size 11px
	background-color #D8D8D8
	line-height 13px
	padding 3px 2px 2px 10px
	sprite($search_bg)


.searchform #search_submit
	position relative
	vertical-align middle
	cursor pointer
	float left
	sprite($search_icon)
