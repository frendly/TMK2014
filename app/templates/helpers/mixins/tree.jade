mixin tools(list)
		ul.list
			each item in list
				li.list__item
					span.mark= item[0]
					= ' - ' + item[1]



mixin folder(item)
		li.menu__item
			a.menu__link(href=item.link)= item.title

			if item.submenu
				+tree(item.submenu, 'submenu')


mixin tree(tree, classname)
	- var classname = classname ? classname : 'menu';
	ul(class="#{classname}")
		each item in tree
			if item.title
				+folder(item)