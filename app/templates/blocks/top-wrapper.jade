block recommend
#top-wrapper
	.content
		if lang === 'ru'
			ul
				li: a.home(href='/') Главная
				li: a.sitemap(href='sitemap.html') Карта сайта
				if pageId !== undefinded
					li: a.recommend(href='recommend.html?index=#{pageId}&lang=#{recommend_lang}') Рекомендовать отчет
				li: a(href='contact.html') Контакты
				li: include ../blocks/switch-language
				li: include ../blocks/searchform
		else
			ul
				li: a.home(href= globalPath + 'en/') Home
				li: a.sitemap(href='sitemap.html') Sitemap
				if pageId !== undefinded
					li: a.recommend(href='recommend.html?index=#{pageId}&lang=#{recommend_lang}') Recommend page
				li: a(href='contact.html') Contacts
				li: include ../blocks/switch-language
				li: include ../blocks/searchform
